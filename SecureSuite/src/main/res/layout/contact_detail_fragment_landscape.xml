<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DetailFragmentLandscape"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/contact_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:paddingTop="3dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:orientation="vertical" >

        <com.nuvolect.securesuite.graphics.RoundedImageView
            android:id="@+id/contact_detail_image_landscape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15sp"
            android:src="@drawable/black_droid" />

        <TableLayout
            android:id="@+id/contact_detail_table_landscape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/contact_detail_image_landscape" >
        </TableLayout>
    </RelativeLayout>

</ScrollView>