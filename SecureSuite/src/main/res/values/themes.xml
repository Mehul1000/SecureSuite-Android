        <item name="android:shadowDx"        >0</item>
        <item name="android:shadowDy"        >0</item>
        <item name="android:shadowRadius"    >0</item>

        <item name="android:textColorPrimary">@color/greendark</item>
        <item name="android:textColor"       >@color/greendark</item>
        <item name="android:textColorHint"   >@color/blue</item>
        <item name="android:textColorLink"   >@color/teal</item>
        <item name="rule_color"              >@color/yellow</item>
        <item name="action_bar_background"   >@color/greylighttrans</item>
 	</style>
