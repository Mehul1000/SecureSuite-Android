<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppThemeParentLight" parent="android:Theme.Holo.Light" >

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor"       >@color/black</item>
        <item name="h1_color"                >@color/black</item>
        <item name="h2_color"                >@color/greydark</item>
        <item name="h3_color"                >@color/bluedark</item>
        <item name="body_color"              >@color/greydark</item>
        <item name="rule_color"              >@color/blue</item>
        <item name="android:shadowColor"     >@color/greydarktrans</item>
        <item name="android:shadowDx"        >0</item>
        <item name="android:shadowDy"        >0</item>
        <item name="android:shadowRadius"    >0</item>
        <item name="android:textColorHint"   >@color/black</item>
        <item name="android:textColorLink"   >@color/blue</item>
<!-- <item name="android:background"      >@color/green</item>  --> <!-- color behind everything -->
        <item name="action_bar_background"   >@color/greytrans</item>
 	</style>
    <style name="AppThemeParentDark" parent="android:Theme.Holo" >

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor"       >@color/white</item>
        <item name="h1_color"                >@color/white</item>
        <item name="h2_color"                >@color/grey</item>
        <item name="h3_color"                >@color/greydark</item>
        <item name="body_color"              >@color/greylight</item>
        <item name="rule_color"              >@color/blue</item>
        <item name="android:shadowColor"     >#CCFFFFFF</item>
        <item name="android:shadowDx"        >0</item>
        <item name="android:shadowDy"        >0</item>
        <item name="android:shadowRadius"    >0</item>
        <item name="android:textColorHint"   >@color/greylight</item>
        <item name="android:textColorLink"   >@color/blue</item>
        <item name="action_bar_background"   >@color/blacktrans</item>
 	</style>

    <!-- Black text on white -->
    <style name="AppTheme1" parent="AppThemeParentLight" >

        <item name="android:windowBackground">@drawable/app_theme_1</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor"       >@color/black</item>
        <item name="android:textColorHint"   >@color/bluedark</item>
        <item name="android:textColorLink"   >@color/blue</item>
        <item name="android:shadowRadius"    >1.0</item>
        <item name="rule_color"              >@color/black</item>
        <item name="action_bar_background"   >@color/offwhite</item>
 	</style>
<!-- Blue text on wheat -->
    <style name="AppTheme2" parent="AppThemeParentLight" >

        <item name="android:windowBackground">@drawable/app_theme_2</item>
        <item name="android:textColorPrimary">@color/bluedark</item>
        <item name="android:textColor"       >@color/bluedark</item>
        <item name="android:textColorHint"   >@color/blue</item>
        <item name="android:textColorLink"   >@color/teal</item>
        <item name="android:shadowRadius"    >0.0</item>
        <item name="rule_color"              >@color/black</item>
        <item name="action_bar_background"   >@color/tanlighttrans</item>
 	</style>
    <!-- Earth tone on hex -->
    <style name="AppTheme3" parent="AppThemeParentLight" >

        <item name="android:windowBackground">@drawable/app_theme_3</item>

        <item name="h1_color"                >@color/greendark</item>
