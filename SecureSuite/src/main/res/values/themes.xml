    <style name="AppTheme10" parent="AppThemeParentDark" >

        <item name="h2_color"                >@color/greenlight</item>
        <item name="h3_color"                >@color/green</item>
        <item name="body_color"              >@color/white</item>
        <item name="rule_color"              >@color/greenlighttrans</item>
        <item name="android:shadowColor"     >@color/black</item>
        <item name="android:shadowDx"        >1</item>
        <item name="android:shadowDy"        >1</item>
        <item name="android:shadowRadius"    >1</item>
